<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Escooba" >

    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:columnCount="4"
        android:rowCount="2"        >
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_1"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_1"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_2"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_2"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_3"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_3"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_4"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_4"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_5"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_1"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_6"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_2"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_7"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_3"
        android:contentDescription="@string/card_description" />
         <booba.skaya.escooba.view.CardView
        android:id="@+id/table_card_8"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/copa_4"
        android:contentDescription="@string/card_description" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/player_hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<booba.skaya.escooba.view.CardView
        android:id="@+id/player_card_1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/copa_4"
        android:contentDescription="@string/card_description" />
		<booba.skaya.escooba.view.CardView
        android:id="@+id/player_card_2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/copa_4"
        android:contentDescription="@string/card_description" />
		<booba.skaya.escooba.view.CardView
        android:id="@+id/player_card_3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/copa_4"
        android:contentDescription="@string/card_description" />
    </LinearLayout>

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_button"
        android:onClick="play" />

    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_text_text" />

</LinearLayout>